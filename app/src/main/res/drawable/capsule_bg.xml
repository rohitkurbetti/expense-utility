<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#5900BCD4" />

    <!-- Rounded corners -->
    <corners android:radius="50dp" />

    <!-- White border -->
    <stroke
        android:width=".75dp"
        android:color="#00BCD4" />

    <!-- Inner padding -->
    <padding
        android:bottom="6dp"
        android:left="12dp"
        android:right="12dp"
        android:top="6dp" />
</shape>
