<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background (grey segmented bar) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <gradient
                android:startColor="#444444"
                android:endColor="#222222"
                android:angle="270"/>
            <stroke android:width="2dp" android:color="#000000"/>
        </shape>
    </item>

    <!-- Progress (blue segmented glossy effect) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <gradient
                    android:startColor="@color/cardview_light_background"
                    android:centerColor="?colorPrimary"
                    android:endColor="?colorPrimaryDark"
                    android:angle="270"/>
                <stroke android:width="1dp" android:color="?android:colorPrimary"/>
            </shape>
        </clip>
    </item>

</layer-list>
