<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="#00000000"
                android:endColor="#00000033"
                android:angle="270"/>
        </shape>
    </item>

    <!-- Main glossy gradient -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="#4A148C"
                android:centerColor="#6A1B9A"
                android:endColor="#A43EE2"
                android:angle="270"/>
        </shape>
    </item>

    <!-- Top shine overlay -->
    <item android:top="5dp" android:left="12dp" android:right="12dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>
            <gradient
                android:startColor="#80FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270"/>
        </shape>
    </item>

</layer-list>
